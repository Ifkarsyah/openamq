<?xml version="1.0"?>

<!-- AMQPJ build file -->
<project name="GRM" default="jar" basedir=".">
    <property name="libs.location" value="lib"/>
    <path id="project.classpath">
        <path refid="mainproject.classpath"/>
        <path refid="libs.classpath"/>
    </path>
    <path id="mainproject.classpath">
        <pathelement location="bin"/>
    </path>
    <path id="libs.classpath">
        <pathelement location="${libs.location}/mina-core-0.9.5-SNAPSHOT.jar"/>
        <pathelement location="${libs.location}/log4j-1.2.13.jar"/>
    </path>
    <target name="init">
        <mkdir dir="bin"/>
    </target>
    <target name="clean">
        <delete dir="bin"/>
        <delete dir="generated"/>
    </target>
    <target name="build" depends="init" >
        <javac destdir="bin" target="1.5" source="1.5" debug="on">
            <src path="src"/>
            <src path="generated"/>
            <classpath refid="project.classpath"/>
        </javac>
    </target>
    <!-- Build jar archive -->
    <target name="jar" depends="build">
        <copy file="src/log4j.properties" todir="bin"/>
        <delete file="dist/amqp.jar"/>
        <jar basedir="bin" jarfile="dist/amqpj.jar"/>
    </target>
</project>
