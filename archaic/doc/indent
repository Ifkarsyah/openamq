#   Indents all titles in a text
#
#   ***** -> =====
#   ===== -> -----
#   ----- -> .....
#   ..... -> abort
#

while (<>) {
    if (/^(\*\*\*\*+)$/) {
        s/\*/\=/g;
    }
    elsif (/^(\=\=\=\=+)$/) {
        s/\=/\-/g;
    }
    elsif (/^(\-\-\-\-+)$/) {
        s/\-/\./g;
    }
    elsif (/^(\.\.\.\.+)$/) {
        print ("WARNING: document already contains H4 items\n");
        exit (1);
    }
    print $_;
}
