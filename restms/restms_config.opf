<opf
    name    = "restms_config"
    comment = "RestMS configuration properties"
    script  = "opf_gen"
    root    = "config"
    config  = "restms.cfg"
    >

<!--
    This file inherits the configuration properties from the HTTP server config, 
    so that RestMS users do not need to manage two config files.  Since we use 
    the http library in RestMS, we load configuration data into http_config as 
    that library expects.
 -->

<inherit filename = "http_config.opf" />

<public>
extern $\(selftype)
    *restms_config;                     //  RestMS properties object
</public>

<private>
$\(selftype)
    *restms_config = NULL;
</private>

<path name = "server">
    <property name = "name" type = "char *" default = "www.restms.com" prefix = "server">
    Announced server name
    <doc>
    Specifies the Server: header field name for HTTP responses.
    </doc>
    </property>
</path>

<path name = "amqp">
    <property name = "autorun" type = "char *" default = "amq_server" prefix = "amqp">
    AMQP server to start
    <doc>
    Specifies the broker to start, when RestMS starts.
    </doc>
    </property>

    <property name = "hostname" type = "char *" default = "localhost" prefix = "amqp">
    AMQP server to connect to
    <doc>
    Specifies the hostname and optionally port number to connect to.
    </doc>
    </property>

    <property name = "username" type = "char *" default = "guest" prefix = "amqp">
    AMQP user name
    <doc>
    Specifies the user name to use for AMQP connections.
    </doc>
    </property>

    <property name = "password" type = "char *" default = "guest" prefix = "amqp">
    AMQP password
    <doc>
    Specifies the password to use for AMQP connections.  Credentials are
    always passed using the SASL BASIC mechanism.
    </doc>
    </property>
</path>

</opf>
