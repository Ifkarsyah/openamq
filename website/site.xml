<!--
    OpenAMQ website definition

    A <site> has a name (user visible), some <page>s and <sections> with
    more <page>s.

    Each <page> will be loaded from name.xml
-->
<site
    name   = "OpenAMQ"
    script = "site.gsl"
    >
    <section name = "OpenAMQ.org" >
        <page name = "index"     />
        <page name = "license"   />
        <page name = "overview"  />
        <page name = "credits"   />
    </section>

    <section name = "Software"    >
        <page name = "contents"  />
        <page name = "download"  />
        <page name = "build"     />
        <page name = "deploy"    />
    </section>

    <section name = "Features"    >
        <page name = "server"    />
        <page name = "clients"   />
        <page name = "protocol"  />
    </section>

    <section name = "Support"     >
        <page name = "maillist"  />
        <page name = "library"   />
        <page name = "faq"       />
    </section>

    <section name = "Developers"  >
        <page name = "examples"  />
        <page name = "apis"      />
        <page name = "wiki"      />
    </section>
</site>
