.template 1
.-
.- Run once for each page and language
.-
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>
  <title>$(site.name): $(page.title)</title>
  <link rel="stylesheet" href="default.css" type="text/css"/>
  <link rel="stylesheet" type="text/css" href="niftyCorners.css" />
  <link rel="stylesheet" type="text/css" href="niftyPrint.css" media="print" />
  <script type="text/javascript" src="niftycube.js"></script>
  <script type="text/javascript" src="layout.js"></script>
</head>
<body>
  <div id="left_container">
    <div id="logo_container">
      <a href="index.html"><img id="logo" width="155" height="80" src="logo.png"/></a>
    </div>
    <div id="menu_container">
.for site.section where defined (section.name)
      <div class="menu_section">
        <h1 class="menu_title">$(name)</h1>
.   for page
          <p class="menu_item"><a href="$(page.name).html">$(page.title)</a></p>
.   endfor
      </div>
.endfor
    </div>
    <div id="copyright">
.for site.copyright
      $(copyright.string ())
.endfor
    </div>
  </div>

  <div id="right_container">
    <div id="title_container">
      <h1 id="title">$(page.title)</h1>
      <h2 id="title">$(page.subtitle)</h2>
    </div>
    <div id="content_container">

    <!-- Page content -->
.for page.content
    $(content.string ())
.endfor
    <!-- End page content -->
    <br/>
    </div>
  </div>
</body>
</html>
.endtemplate
