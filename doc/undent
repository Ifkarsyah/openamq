#   Undents all titles in a text
#
#   ***** -> abort
#   ===== -> *****
#   ----- -> =====
#   ..... -> -----
#

while (<>) {
    if (/^(\*\*\*\*+)$/) {
        print ("WARNING: document already contains H1 items\n");
        exit (1);
    }
    elsif (/^(\=\=\=\=+)$/) {
        s/\=/\*/g;
    }
    elsif (/^(\-\-\-\-+)$/) {
        s/\-/\=/g;
    }
    elsif (/^(\.\.\.\.+)$/) {
        s/\./\-/g;
    }
    print $_;
}
