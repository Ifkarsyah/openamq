<?xml?>
<pal
    script = "amq_pal_gen"
    desc   = "Test default basic queue/exchange declarations using get"
    >
    This test represents a minimal basic client. It tries to do so, by using defaults
    in declaration and bindings.
    
    <include filename = "amq_test_base.pal" />
    <session>
        <queue_declare />
        <basic_content message_id = "id-1" />
        <basic_publish routing_key = "$queue" />
        <basic_get queue = "$queue" />
        <basic_arrived>
            <echo>Message '$message_id' [$body_size] came back from $exchange to us using rk: '$routing_key'</echo>
        </basic_arrived>
        <empty>
            <abort>Message did not come back, this is bad!</abort>
        </empty>
    </session>
    
</pal>


