<?xml?>
<pal
    name = "amq_console_test"
    script = "amq_pal_gen"
    target = "stdc"
    >
    The test console works in collaboration with test_console.pl,
    which drives the actual test scenarios.  Please read the perl
    script for details.
    <include filename = "amq_test_base.pal" />
    <session scope = "test">
        <queue_declare />
        <queue_bind queue = "$queue" exchange = "amq.direct" routing_key = "$queue" />
        <jms_consume queue = "$queue" auto_ack = "1" />
        <repeat counter = "count">
            <jms_content exec = "perl amq_console_test.pl" reply_to = "$queue" />
            <if name = "body_size" value = "0">
                <break/>
            </if>
            <jms_publish exchange = "amq.system" routing_key = "amq.console" />
            <wait/>
            <jms_arrived>
                <echo>Got response from console - $message_id</echo>
            </jms_arrived>
            <empty>
                <echo>No response arrived from console, aborting</echo>
                <break/>
            </empty>
        </repeat>
    </session>
</pal>

