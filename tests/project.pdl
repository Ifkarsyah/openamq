    <file name = "tests_java"                     class = "public resource" >Determines if to perform the Java tests</file>
    <file name = "test_syn_que_tem_10000_1K_2.sh" class = "public resource" >Java small messages test (10M)</file>
    <file name = "test_syn_que_tem_10_1M_3.sh"    class = "public resource" >Java big messages test (10M)</file>
    <file name = "test_syn_que_tem_100_1M_3.sh"   class = "public resource" >Java big messages test (100M)</file>
    <file name = "test_syn_que_tem_1_1G_4.sh"     class = "public resource" >Java huge message test (1G)</file>
    <file name = "test_syn_que_per_10000_1K_2.sh" class = "public resource" >Java small messages test (10M, persistent)</file>
    <file name = "test_syn_que_per_10_1M_3.sh"    class = "public resource" >Java big messages test (10M, persistent)</file>
    <file name = "test_syn_que_per_100_1M_3.sh"   class = "public resource" >Java big messages test (100M, persistent)</file>
