</directory>
<directory name = "tests_10_api/tests_agnostic">
    <file name = "test_syn_que_tem_10000_1K_2.sh" class = "public resource" >Agnostic small messages test (10M)</file>
    <file name = "test_syn_que_tem_10_1M_3.sh"    class = "public resource" >Agnostic big messages test (10M)</file>
