<?xml?>
<pal
    script = "amq_pal_gen"
    desc   = "Subscribe client 2"
    >
    <session>
        <exchange_declare exchange = "myexchange" type = "headers" />
        <queue_declare queue = "myqueue2" />
        <queue_bind queue = "myqueue2" exchange = "myexchange">
            <arguments>
                <field name = "x" value = "a" />
            </arguments>
        </queue_bind>
        <echo>Bind: x MUST EQUAL 'a'</echo>
        <basic_consume queue = "myqueue2" />
        <repeat>
            <wait />
            <basic_arrived>
                <inc name = "messages"/>
                <echo>In $messages: [$message_id] with x=$headers-x y=$headers-y z=$headers-z</echo>
            </basic_arrived>
            <empty>
                <abort>No message</abort>
            </empty>
        </repeat>
    </session>
    
</pal>


