<?xml?>
<pal script = "amq_pal_gen">
    <set name = "count" value = "0" cmdline = "C" />
    <set name = "client" value = "0" cmdline = "N" />
    <set name = "messages" value = "1" cmdline = "M" />
    <session>
        <queue_declare queue = "queue-$client" auto_delete = "1" />
        <repeat times = "$count" counter = "counter">
            <queue_bind queue = "queue-$client" exchange = "amq.topic" routing_key = "foo.bar.$client.$counter" />
        </repeat>
        <basic_consume queue = "queue-$client" />
        <echo>Subscriber ready</echo>

        <set name = "total" value = "0" />
        <repeat>
            <wait />
            <if name  = "total" value = "0" >
                <timer />
            </if>
            <basic_arrived>
                <inc name = "total" />
                <!-- <echo>[$message_id] with rk=$routing_key</echo> -->
            </basic_arrived>
            <empty>
                <abort>No message</abort>
            </empty>
	    <!-- <echo>count: $count total: $total </echo> -->
            <if name = "messages" test = "eq" value = "total">
                <timer action = "show" />
                <basic_content message_id = "stop" />
                <basic_publish routing_key = "publisher-control" />
                <exit />
            </if>
        </repeat>
    </session>
</pal>


